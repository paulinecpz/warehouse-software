<div class="w-50 d-flex justify-content-between align-items-center pb-5">
<%= simple_form_for @product do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.simple_fields_for :variants do |v| %>
  <%= v.input :sku %>
  <%= v.input :stock_quantity %>
  <% end %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
</div>