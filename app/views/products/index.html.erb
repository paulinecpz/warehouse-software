<h1>New Product</h1>
<ul>
  <% @products.each do |product| %>
    <li><%= product.title %></li>
    <p><%= product.description%></p>

    <%= link_to 'Edit', edit_product_path(product) %> | 
    <%= link_to "Delete",
                  product_path(product),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete ?" } %>

  <% end %>
</ul>
